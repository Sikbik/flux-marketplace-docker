# Abiotic Factor Dedicated Server (Flux-friendly)

# SteamCMD
STEAM_APP_ID=2857200
STEAM_INSTALL_DIR=/data/server
STEAM_LOGIN=anonymous
STEAMCMD_VALIDATE=true
AUTO_UPDATE=true
DISK_PREFLIGHT=true
MIN_FREE_GB=20

# Flux hardening
HARDEN_FLUX_VOLUME_BROWSER=true

# Server settings
MANAGE_CONFIG=true
AF_SERVER_NAME=RunOnFlux - Abiotic Factor
AF_SERVER_PASSWORD=test1234
AF_ADMIN_PASSWORD=admin1234
AF_MAX_PLAYERS=6
AF_PORT=7777
AF_QUERY_PORT=27015
AF_WORLD_SAVE_NAME=Cascade

# Optional moderators list (SteamID64)
AF_MODERATORS=
AF_MODERATORS_APPLY_MODE=always
AF_ADMIN_INI_RELATIVE_PATH=SaveGames/Server/Admin.ini

# Optional sandbox ini (advanced)
# Tip: leave empty unless you know the game's sandbox preset format.
AF_SANDBOX_SETTINGS_INI=
AF_SANDBOX_SETTINGS_INI_B64=
AF_SANDBOX_SETTINGS_INI_FILE=
AF_SANDBOX_APPLY_MODE=once
AF_SANDBOX_INI_RELATIVE_PATH=Config/WindowsServer/ServerSandbox.ini

# Wine
WINEPREFIX=/opt/wine/prefix
WINEARCH=win64
WINEDEBUG=-all
USE_XVFB=true
XVFB_DISPLAY=99
XVFB_ARGS=-screen 0 1024x768x24 -nolisten tcp -ac

# Runtime behavior
AF_WRITE_STEAM_APPID_TXT=true
AF_BASE_GAME_APP_ID=427410
AF_STEAM_GAME_ID=427410
AF_SERVER_ARGS=

# Permissions (optional)
PUID=1000
PGID=1000
