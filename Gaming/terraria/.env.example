# Terraria Dedicated Server - Example Environment

# Install / update
AUTO_UPDATE=true
TERRARIA_INSTALL_DIR=/data/server
DISK_PREFLIGHT=true
MIN_FREE_GB=2

# Optional: pin a dedicated server version (e.g. 1450)
# If unset, the container will try to auto-detect the latest version from the Terraria wiki.
TERRARIA_SERVER_VERSION=
TERRARIA_SERVER_URL=

# Flux hardening (optional)
# If true, locks down /data to reduce Flux volume explorer load (recommended).
HARDEN_FLUX_VOLUME_BROWSER=true

# Config management
MANAGE_CONFIG=true
TERRARIA_CONFIG_PATH=/config/serverconfig.txt

# Network
TERRARIA_PORT=7777

# Server identity & access
TERRARIA_WORLD_NAME="RunOnFlux World"
TERRARIA_SERVER_PASSWORD=test1234
TERRARIA_MAX_PLAYERS=16
TERRARIA_MOTD="Welcome to Terraria on Flux!"

# World creation
# If the world file does not exist, the server will create it.
TERRARIA_AUTOCREATE=2        # 1=small, 2=medium, 3=large
TERRARIA_SEED=
TERRARIA_DIFFICULTY=0        # 0=normal, 1=expert, 2=master, 3=journey (varies by version)

# Security / misc
TERRARIA_SECURE=true
TERRARIA_UPNP=false

# Permissions (optional)
PUID=
PGID=

# Advanced
TERRARIA_EXTRA_ARGS=
