# Valheim Dedicated Server - Example Environment

# SteamCMD / install
AUTO_UPDATE=true
STEAM_APP_ID=896660
STEAM_INSTALL_DIR=/data/server
STEAMCMD_HOME=/data/steam
STEAMCMD_LOG_FILE=/data/steam/steamcmd.log
STEAMCMD_VALIDATE=false
STEAM_BRANCH=
STEAM_BRANCH_PASSWORD=
STEAMCMD_RETRIES=3
DISK_PREFLIGHT=true
MIN_FREE_GB=5

# Flux hardening (optional)
HARDEN_FLUX_VOLUME_BROWSER=true

# Server basics (player-facing)
VALHEIM_SERVER_NAME="RunOnFlux - Valheim"
VALHEIM_WORLD_NAME="RunOnFlux"
VALHEIM_PASSWORD=test1234
VALHEIM_PUBLIC=true
VALHEIM_PORT=2456
VALHEIM_SAVE_INTERVAL=600

# Persistence
VALHEIM_SAVEDIR=/config

# Optional features
VALHEIM_CROSSPLAY=false

# Steam/Unity helpers (recommended)
VALHEIM_STEAM_APP_ID=892970
VALHEIM_WRITE_STEAM_APPID_TXT=true

# Logging / Unity
# Leave blank to use Valheim's default stdout logging.
# If you want logs written to a file, set e.g. /config/valheim-server.log
VALHEIM_LOG_FILE=

# Advanced
VALHEIM_EXTRA_ARGS=

# Permissions (optional)
PUID=
PGID=
