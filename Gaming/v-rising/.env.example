# V Rising Dedicated Server - Example Environment

# SteamCMD / install
AUTO_UPDATE=true
STEAM_APP_ID=1829350
STEAM_INSTALL_DIR=/data/server
STEAMCMD_HOME=/data/steam
STEAMCMD_LOG_FILE=/data/steam/steamcmd.log
STEAMCMD_VALIDATE=true
STEAM_BRANCH=
STEAM_BRANCH_PASSWORD=
DISK_PREFLIGHT=true
MIN_FREE_GB=15

# Flux hardening (optional)
HARDEN_FLUX_VOLUME_BROWSER=true

# Persistent data (configs + saves)
VR_PERSISTENT_DATA_DIR=/config/save-data

# Config management
MANAGE_CONFIG=true
VR_CONFIG_APPLY_MODE=always
VR_LISTS_APPLY_MODE=always

# Player-facing server settings
VR_SERVER_NAME="RunOnFlux - V Rising"
VR_SERVER_DESCRIPTION=
VR_SAVE_NAME=RunOnFlux
VR_PASSWORD=test1234
VR_GAME_PORT=9876
VR_QUERY_PORT=9877
VR_MAX_PLAYERS=40
VR_MAX_ADMINS=4
VR_SERVER_FPS=30
VR_SECURE=true
VR_LIST_ON_STEAM=true
VR_LIST_ON_EOS=true
VR_AUTOSAVE_INTERVAL=600
VR_AUTOSAVE_COUNT=50
VR_GAME_SETTINGS_PRESET=

# Popular game settings (written into ServerGameSettings.json)
VR_TELEPORT_BOUND_ITEMS=true
VR_BAT_BOUND_ITEMS=true
VR_MATERIAL_YIELD_MODIFIER_GLOBAL=1.0
VR_INVENTORY_STACKS_MODIFIER=1.0
VR_CRAFT_RATE_MODIFIER=1.0
VR_REFINEMENT_RATE_MODIFIER=1.0
VR_CASTLE_BLOOD_ESSENCE_DRAIN_MODIFIER=1.0
VR_CASTLE_DECAY_RATE_MODIFIER=1.0

# Optional RCON (make sure port is opened on your platform)
VR_RCON_ENABLED=false
VR_RCON_PORT=25575
VR_RCON_PASSWORD=

# Optional: supply full JSON for ServerGameSettings.json
VR_GAME_SETTINGS_JSON=
VR_GAME_SETTINGS_JSON_B64=

# Optional lists (SteamID64s; commas/newlines accepted)
VR_ADMIN_LIST=
VR_WHITELIST=
VR_BANLIST=

# Logging / additional args
VR_LOG_FILE=
VR_SERVER_ARGS=
