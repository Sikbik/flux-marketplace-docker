{
  "version": 8,
  "name": "v-rising-flux",
  "description": "V Rising Dedicated Server (SteamCMD + Wine). Uses local /data for install/cache and synced g:/config for persistent save-data. Ports: 9876-9877 (UDP).",
  "owner": "YOUR_ZELID_HERE",
  "compose": [
    {
      "name": "data",
      "description": "Local cache volume for Steam (not synced)",
      "repotag": "alpine:3.20",
      "ports": [],
      "domains": [],
      "environmentParameters": [],
      "commands": [
        "sh",
        "-lc",
        "while true; do sleep 3600; done"
      ],
      "containerPorts": [],
      "containerData": "/data",
      "cpu": 0.1,
      "ram": 200,
      "hdd": 25,
      "repoauth": ""
    },
    {
      "name": "server",
      "description": "V Rising server (g:/config for saves; local /data install)",
      "repotag": "littlestache/v-rising-flux:latest",
      "ports": [
        9876,
        9877
      ],
      "containerPorts": [
        9876,
        9877
      ],
      "domains": [
        "",
        ""
      ],
      "environmentParameters": [
        "VR_SERVER_NAME=RunOnFlux - V Rising",
        "VR_SAVE_NAME=RunOnFlux",
        "VR_PASSWORD=CHANGE_ME",
        "VR_MAX_PLAYERS=40",
        "VR_SERVER_FPS=30",
        "VR_LIST_ON_STEAM=true",
        "VR_LIST_ON_EOS=true",
        "VR_AUTOSAVE_INTERVAL=600",
        "VR_AUTOSAVE_COUNT=50",
        "VR_GAME_SETTINGS_PRESET=",
        "VR_GAME_MODE_TYPE=PvP",
        "VR_CLAN_SIZE=4",
        "VR_TELEPORT_BOUND_ITEMS=true",
        "VR_BAT_BOUND_ITEMS=true",
        "VR_MATERIAL_YIELD_MODIFIER_GLOBAL=1.0",
        "VR_INVENTORY_STACKS_MODIFIER=1.0",
        "VR_CRAFT_RATE_MODIFIER=1.0",
        "VR_REFINEMENT_RATE_MODIFIER=1.0",
        "VR_CASTLE_BLOOD_ESSENCE_DRAIN_MODIFIER=1.0",
        "VR_CASTLE_DECAY_RATE_MODIFIER=1.0"
      ],
      "commands": [],
      "containerData": "g:/config|0:/data",
      "cpu": 4,
      "ram": 6000,
      "hdd": 10,
      "repoauth": ""
    }
  ],
  "instances": 3,
  "contacts": [],
  "geolocation": [],
  "expire": 22000,
  "nodes": [],
  "staticip": false,
  "enterprise": ""
}
